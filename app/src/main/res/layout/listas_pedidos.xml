<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".ListasPedidosActivity">

    <!-- Barra Superior -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1D3557"
        android:gravity="center"
        android:text="Pedidos Feitos"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />



    <!-- Lista de Pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPedidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTextView"
        android:layout_above="@id/bottomBar"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/textViewVazio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="NENHUM PEDIDO ENCONTRADO"
        android:textSize="20sp"
        android:textColor="#888888"
        android:visibility="gone" />



    <!-- Barra Inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#1D3557"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:layout_gravity="center"
            android:padding="8dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="32dp"
            android:layout_marginVertical="12dp"
            android:background="#FFFFFF" />

        <ImageView
            android:id="@+id/carrinho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_cart"
            android:contentDescription="Carrinho"
            android:layout_gravity="center"
            android:padding="8dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="32dp"
            android:layout_marginVertical="12dp"
            android:background="#FFFFFF" />

        <ImageView
            android:id="@+id/historico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_calendar"
            android:contentDescription="CalendÃ¡rio"
            android:layout_gravity="center"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
